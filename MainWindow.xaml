<Window x:Class="PersonalFinance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:PersonalFinance"
        xmlns:helper="clr-namespace:PersonalFinance.UI.Dashboard.Helper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="120"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Margin" Value="1"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground"  Value="DarkBlue"/>
                <Setter Property="BorderBrush"  Value="LightBlue"/>
                <Setter Property="Cursor"  Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderThickness" Value="0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="Rectangle">
                <Setter Property="Fill" Value="#99CCCCFF"/>
            </Style>
        </Grid.Resources>
        <StackPanel Orientation="Horizontal" Name="Main" Margin="10">
            <StackPanel Orientation="Vertical" Name="Actions">
                <Button Content="Home" Name="BtnHome"/>
                <Button Content="Transactions" Name="BtnTransactions"/>
                <Button Content="Categories" Name="BtnCategories"/>
                <Button Content="Import" Name="BtnImport"/>
                <Button Content="Load Sample" Name="BtnLoadSample" Click="BtnLoadSample_Click"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <StackPanel.Resources>
                    <Style x:Key="Widget" TargetType="{x:Type Control}">
                        <Setter Property="Margin" Value="5,0,5,0"/>
                    </Style>
                </StackPanel.Resources>
                <StackPanel Orientation="Horizontal" Margin="20">
                    <StackPanel.Resources>
                        <helper:Year x:Key="years"/>
                        <helper:Month x:Key="months"/>
                        <Style x:Key="FilterControl" TargetType="{x:Type Control}">
                            <Setter Property="Margin" Value="5,0,5,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <ComboBox Name="ComboBoxYear"
                              ItemsSource="{StaticResource years}"
                              Text="Year"
                              IsEditable="true"
                              IsReadOnly="true"
                              Style="{StaticResource FilterControl}">
                    </ComboBox>
                    <ComboBox Name="ComboBoxMonth"
                              ItemsSource="{StaticResource months}"
                              Text="Month"
                              IsEditable="true"
                              IsReadOnly="true"
                              Style="{StaticResource FilterControl}" >
                    </ComboBox>
                    <Button Content="Refresh" 
                            Name="BtnRefreshDashboard" 
                            Style="{StaticResource FilterControl}" Click="BtnRefreshDashboard_Click" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Name="GraphPanel">
                    <TabControl Style="{StaticResource Widget}">
                        <TabItem>
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock>Graph</TextBlock>
                                </StackPanel>
                            </TabItem.Header>
                            <StackPanel>
                                <wpf:WpfPlot Name="WpfPlot1" MinHeight="400" MinWidth="500">
                                </wpf:WpfPlot>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Table">
                            <StackPanel>
                                <DataGrid Name="DataGrid1" ItemsSource="{Binding}" AutoGenerateColumns="False" 
                                          MaxHeight="400"
                                          MinWidth="500"
                                          ScrollViewer.CanContentScroll="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Binding="{Binding DateTime, StringFormat=\{0:yyyy/MM/dd\}}"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                                        <!--The Email property contains a URI.  For example "mailto:lucy0@adventure-works.com"-->
                                        <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" />
                                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                    <TabControl Style="{StaticResource Widget}">
                        <TabItem>
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock>Graph</TextBlock>
                                </StackPanel>
                            </TabItem.Header>
                            <StackPanel>
                                <wpf:WpfPlot Name="WpfPlot2" MinHeight="400" MinWidth="500">
                                </wpf:WpfPlot>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Table">
                            <StackPanel>
                                <DataGrid Name="DataGrid2" ItemsSource="{Binding}" AutoGenerateColumns="False" 
                                          MaxHeight="400"
                                          MinWidth="500"
                                          ScrollViewer.CanContentScroll="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Binding="{Binding DateTime, StringFormat=\{0:yyyy/MM/dd\}}"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                                        <!--The Email property contains a URI.  For example "mailto:lucy0@adventure-works.com"-->
                                        <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" />
                                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
